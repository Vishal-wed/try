<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color1"
    tools:context=".tryActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_marginTop="@dimen/_30sdp"
        android:id="@+id/rigth"
        android:layout_width="250sp"
        android:layout_height="250sp"
        android:background="@drawable/rigth"
        android:layout_gravity="center"/>

    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/show"
        app:layout_constraintTop_toBottomOf="@+id/rigth"
        android:textStyle="bold"
        android:text="Login Successfully"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/show_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="Name: "
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold"
        android:gravity="center"
    />

    <TextView
        android:id="@+id/show_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="Email: "
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/show_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="Number: "
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/show_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="Password: "
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/show_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="Gender: "
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold"
        android:gravity="center"
        />
</LinearLayout>